{
    "name": "kyos/black-scholes",
    "description": "An option price/volatility calculator using the Black-Scholes formula",
    "keywords": [
        "options",
        "black-scholes"
    ],
    "homepage": "https://github.com/kyosenergy/black-scholes",
    "license": "MIT",
    "authors": [
        {
            "name": "Zois Pagoulatos",
            "email": "zpagoulatos@hotmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.15",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Kyos\\BlackScholes\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kyos\\BlackScholes\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config .php_cs.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
